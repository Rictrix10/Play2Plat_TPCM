<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/light_blue_600</item>
        <item name="android:statusBarColor">@color/white2</item> <!-- Cor da barra de status -->
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/light_blue_600</item>
        <item name="android:statusBarColor">@color/white2</item> <!-- Cor da barra de status -->
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">@color/white</item>
    </style>
</resources>
