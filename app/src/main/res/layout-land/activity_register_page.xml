<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_border">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_main_layout_add_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="205dp"
                android:layout_height="205dp"
                app:srcCompat="@drawable/play2plat_logo"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-230dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-160dp"
                android:layout_marginRight="-100dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/text_input"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/m_plus_rounded_1c_medium"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_input"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/m_plus_rounded_1c_medium"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="5dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="424dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-100dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="45dp"
                        android:background="@drawable/text_input"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/m_plus_rounded_1c_medium"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="5dp"
                        android:paddingEnd="40dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/iv_toggle_password_visibility"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="1dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_eye_off" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/text_input"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/m_plus_rounded_1c_medium"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:paddingStart="5dp"
                        android:paddingEnd="40dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/iv_toggle_confirm_password_visibility"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="45dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_eye_off" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@drawable/details"
                android:text="@string/sign_up"
                android:fontFamily="@font/m_plus_rounded_1c_black"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textAllCaps="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_border" />

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_prompt"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/m_plus_rounded_1c_extrabold"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


