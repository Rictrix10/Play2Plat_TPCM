<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_border">

    <LinearLayout
        android:id="@+id/ll_main_layout_add_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="424dp"
            android:layout_height="242dp"
            app:srcCompat="@drawable/play2plat_logo"
            android:layout_marginTop="20dp" /> <!-- Adiciona margem superior -->

        <!-- Adicionando os campos de usuÃ¡rio e senha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="8dp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:hint="Username"
                android:inputType="text"
                android:paddingStart="5dp"
                android:textColor="#000000" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/text_input"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="8dp"
                android:fontFamily="@font/m_plus_rounded_1c_medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:textColor="#000000" />


            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/details"
                android:text="Sign In"
                android:fontFamily="@font/m_plus_rounded_1c_black"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/details" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/google"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="56dp"
                    android:background="@drawable/circle"
                    android:src="@drawable/facebook"
                    android:scaleType="centerCrop"
                    android:backgroundTint="#1F6BFF" />
            </LinearLayout>




            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_prompt"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/m_plus_rounded_1c_extrabold"
                android:layout_marginTop="16dp"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>